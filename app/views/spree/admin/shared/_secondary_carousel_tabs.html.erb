<% content_for :page_title do %>
    <%= link_to Spree.t(:secondary_carousels), spree.admin_secondary_carousels_path %> /
    <%= @secondary_carousel.name %>
<% end %>

<% content_for :sidebar do %>
    <ul class="nav nav-pills nav-stacked" data-hook="admin_secondary_carousel_tabs">
      <%= content_tag :li, class: ('active' if current == :details) do %>
          <%= link_to_with_icon 'edit', Spree.t(:details), spree.edit_admin_secondary_carousel_url(@secondary_carousel) %>
      <% end if can?(:admin, Spree::SecondaryCarousel) %>
      <%= content_tag :li, class: ('active' if current == :secondary_carousel_items) do %>
          <%= link_to_with_icon 'picture', Spree.t(:secondary_carousel_items), spree.admin_secondary_carousel_secondary_carousel_items_url(@secondary_carousel) %>
      <% end if can?(:admin, Spree::SecondaryCarouselItem) %>
    </ul>
<% end %>
